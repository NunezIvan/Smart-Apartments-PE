{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe compilar archivo activo",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/src/main.cpp",
                "${workspaceFolder}/src/login.cpp",
                "${workspaceFolder}/src/usuario.cpp",
                "${workspaceFolder}/src/usuario_Apartamento.cpp",  // Añade usuario_Apartamento.cpp
                "${workspaceFolder}/src/edificio.cpp",
                "${workspaceFolder}/src/nivel.cpp",
                "${workspaceFolder}/src/departamento.cpp",
                "${workspaceFolder}/src/administrador.cpp",        // Añade administrador.cpp
                "${workspaceFolder}/src/mantenimiento.cpp",        // Añade mantenimiento.cpp
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-I${workspaceFolder}/include"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Tarea generada por el depurador."
        }
    ]
